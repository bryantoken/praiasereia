  <div class="container">
    <h1 class="text-center">Morador #<%= @morador.id %></h1>
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-md-4">
        <div class="card h-100">
        
<h5 class="card-header">
          Bloco <%= @morador.bloco %> - 
          Ap. <%= @morador.apartamento %> 
          </h5>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-center"> <%= @morador.nome %></h5>
            <div class="card-text flex-grow-1">
              <%= render partial: "moradors/morador", locals: { morador: @morador } %>
            </div>
            <div class="text-center mt-auto">
              <div class="row">
                <div class="col">
                  <%= button_to delete_morador_path(@morador), method: :delete, data: { confirm: 'Tem certeza que deseja deletar este morador?' }, class: 'btn btn-danger' do %>
                    <ion-icon name="trash-bin"></ion-icon>
                    Deletar
                  <% end %>
                </div>
                <div class="col">
                  <%= button_to edit_morador_path(@morador), method: :get, data: { confirm: 'Tem certeza que deseja editar este morador?' }, class: 'btn btn-primary' do %>
                    <ion-icon name="pencil"></ion-icon>
                    Editar
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
