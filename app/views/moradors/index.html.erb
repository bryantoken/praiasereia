  </nav>

  <h1 class="text-center">Moradores</h1>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @moradors.each do |morador| %>
      <div class="col">
        <div class="card h-100">
          <h5 class="card-header">
          Bloco <%= morador.bloco %> - 
          Ap. <%= morador.apartamento %> 
          </h5>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-center"> <%= morador.nome %></h5>
            <div class="card-text flex-grow-1">
              <%= render partial: "moradors/morador", locals: { morador: morador } %>
            </div>
            <div class="text-center mt-auto">
              <%= link_to "Visualizar", morador_path(morador), class: "btn btn-primary rounded-3" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
