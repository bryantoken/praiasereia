<div class="container border border-0 rounded-2 p-4">
  <nav aria-label="Page navigation example border-0 border-bottom">
  <h1 class="text-center text-light">Moradores</h1>
    <%= will_paginate @moradors, class: "apple_pagination border-0 rounded-2" %>
    <div class="d-flex align-items-center p-2 justify-content-end m-0 pe-0 ps-0">
  <%= button_to new_morador_path, method: :get, class: "btn btn-primary d-flex gap-2 align-items-center" do
    %>
      <span>
    Novo morador
      </span>
    <ion-icon name="add-circle" style="font-size: large;"></ion-icon>
    <% end %>

    </div>
  </nav>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% @moradors.each do |morador| %>
          <div class="col">
            <div class="card h-100">
              <h5 class="card-header">
                Bloco <%= morador.bloco %> -
                  Ap. <%= morador.apartamento %>
              </h5>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title text-center">
                  <%= morador.nome %>
                </h5>
                <div class="card-text flex-grow-1">
                  <%= render partial: "moradors/morador" , locals: { morador: morador } %>
                </div>
                <div class="text-center mt-auto">
                  <%= link_to "Visualizar" , morador_path(morador), class: "btn btn-primary rounded-3" %>
                </div>
              </div>
            </div>
          </div>
          <% end %>
      </div>
</div>